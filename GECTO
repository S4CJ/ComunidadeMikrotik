            max-width: 500px;
        }

        .splitter h2 {
            text-align: center;
            color: #555;
        }

        .splitter p {
            margin: 10px 0;
            font-size: 1rem;
            color: #333;
        }

        .splitter .result {
            font-weight: bold;
            color: #000;
        }
    </style>
</head>
